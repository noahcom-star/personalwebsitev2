              </svg>
            </div>
            <div>
              <p class="text-sm text-primary-500 dark:text-primary-400">LinkedIn</p>
              <a href="https://www.linkedin.com/in/noah-barbaros/" target="_blank" rel="noopener noreferrer" class="text-primary-900 dark:text-primary-100 font-medium hover:text-accent-600 dark:hover:text-accent-400 transition-colors">
                linkedin.com/in/noah-barbaros
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="bg-white dark:bg-primary-800 rounded-2xl shadow-lg border border-primary-200 dark:border-primary-700 p-8">
        <h3 class="text-xl font-semibold text-primary-900 dark:text-primary-100 mb-6">
          send a message
        </h3>
        <form action="https://formspree.io/f/myzpwvaj" method="POST" class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-primary-700 dark:text-primary-300 mb-2">
              name
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-primary-300 dark:border-primary-600 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent dark:bg-primary-700 dark:text-primary-100"
              placeholder="your name"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-primary-700 dark:text-primary-300 mb-2">
              email
            </label>
            <input 
              type="email" 
              id="email" 
              name="_replyto" 
              required
              class="w-full px-4 py-3 border border-primary-300 dark:border-primary-600 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent dark:bg-primary-700 dark:text-primary-100"
              placeholder="your@email.com"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-primary-700 dark:text-primary-300 mb-2">
              message
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              required
              class="w-full px-4 py-3 border border-primary-300 dark:border-primary-600 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-transparent dark:bg-primary-700 dark:text-primary-100 resize-none"
              placeholder="your message..."
            ></textarea>
            
            <!-- Honeypot for spam protection -->
            <input type="text" name="_gotcha" style="display:none" />
          </div>
          <button 
            type="submit"
            class="w-full px-6 py-3 bg-accent-600 hover:bg-accent-700 text-white rounded-lg transition-colors font-medium"
          >
            send message
          </button>
        </form>
      </div>
    </div>
  </div>
</div> 